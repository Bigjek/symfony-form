<div class="entity-list-item" id="item-{{ client.id }}">

    <div class="entity-list-header">
        <div class="entity-list-title" role="tab" data-toggle="collapse" data-parent="{% if parent_id is defined %}sub-accordion-{{ parent_id }}{% else %}#accordion{% endif %}" href="#id-{{ client.id }}" aria-expanded="true">
            <div class="col-md-4">
                <h4>
                    {{ client.vac }}
                </h4>
            </div>
        </div>
    </div>
    <div id="id-{{ client.id }}" class="panel-collapse collapse" aria-expanded="true" role="tabpanel">
        <div class="entity-list-body">
            <div class="row" style="background-color: #f6f6f6;">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="box box-danger">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Информация</h3>
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-4">ФИО:</div>
                                        <div class="col-md-8">{{ client.name }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Дата рождения:</div>
                                        <div class="col-md-8">{{ client.date|date('d.m.Y') }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Телефон:</div>
                                        <div class="col-md-8">{{ client.mobilePhone }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Email:</div>
                                        <div class="col-md-8">{{ client.email }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Образование:</div>
                                        <div class="col-md-8">{{ client.shcool }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Опыт работы:</div>
                                        <div class="col-md-8">{{ client.jobs }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Почему я хочу работать:</div>
                                        <div class="col-md-8">{{ client.question }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Социальная сеть:</div>
                                        <div class="col-md-8">{{ client.socion }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Портфолио:</div>
                                        <div class="col-md-8">{{ client.portfolio }}</div>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                        </div>
                        <div class="col-md-4">
                                <div class="col-md-12">
                                    <div class="box box-danger">
                                        <div class="box-header with-border">
                                            <h3 class="box-title">Фотография</h3>
                                        </div>
                                        <!-- /.box-header -->
                                        <div class="box-body">
                                            <div>
                                                <img style="width: 100%;" src="{{ vich_uploader_asset(client, 'imageFile')|imagine_filter('product_thumb') }}" alt="{{ client.name }}" title="{{ client.name }}" /> 
                                            </div>
                                        </div>
                                        <!-- /.box-body -->
                                    </div>
                                </div>
                                
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>